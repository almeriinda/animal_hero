<%= form_with(model: ong, local: true) do |form| %>
  <% if ong.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ong.errors.count, "error") %> prohibited this ong from being saved:</h2>

      <ul>
      <% ong.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= form.label :nome %>
        <%= form.text_field :nome, class: 'form-control' %>
        </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="form-group">
        <%= form.label :estado %>
        <%= form.text_field :estado, class: 'form-control' %>
      </div>
    </div>
  </div>  

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= form.label :logo %>
        <%= form.file_field :logo, class: 'form-control' %>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="form-group">
        <%= form.label :user_id, "Usuário" %>
        <% value_user = @ong.user_id rescue "" %>
        <%= form.select :user_id, options_for_select(@usuarios, value_user), {prompt: "--Selecione uma usuário--"}, {class: 'form-control'} %>
      </div>
    </div>
</div>    

  <div class="actions">
    <%= link_to 'Voltar', ongs_path, class: 'btn btn-default' %>
    <%= form.submit @botao, class: 'btn btn-primary' %>
  </div>
<% end %>
